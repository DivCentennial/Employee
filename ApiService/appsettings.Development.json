{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {CorrelationId} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\PAL-NG\\Purchase\\Employee\\Log_.txt",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {CorrelationId} {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760 // 10 MB
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "EnableCentalizedConfiguration": false,
  "AuthorizationService": {
    "UseMockData": true,
    "MockUserDataFile": "_dummyUserData\\user.json",
    "Name": "UserService"
  },

  "ConnectionStrings": {
    "PALConnectionString": "<Connection string>"
  },
  "Auditlog": {
    "Enabled": false
  }

}
